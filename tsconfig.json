{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false
  },
  "include": [
    "server.ts",
    "worker.ts", 
    "src/**/*",
    "types/**/*"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "frontend"
  ]
} 